- alias: "Christmas Tree: Turn on"
  trigger:
    - platform: time
      at: '07:30:00'
    - platform: state
      entity_id: group.all_devices
  condition:
    - condition: template
      value_template: "{{ is_state('group.all_devices', 'home') }}"
    - condition: time
      after: '07:30:00'
      before: '22:59:59'
  action:
    - service: switch.turn_on
      entity_id: switch.zway_device_5

- alias: "Christmas Tree: Turn off"
  trigger:
    - platform: time
      at: '23:00:00'
  action:
    - service: switch.turn_off
      entity_id: switch.zway_device_5